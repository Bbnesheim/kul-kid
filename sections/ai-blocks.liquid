{% comment %}
  Section: AI blocks
  Allows adding multiple custom blocks (Kids hero, Rainbow FAQ, Rainbow Contact Form, Overlay Header) as blocks inside this section.
  Blocks are renamed to remove any "ai" prefix in their visible names/types.
{% endcomment %}

<section class="ai-blocks-section" data-section-id="{{ section.id }}">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'kids_hero' %}
        {% render 'kids-hero-block' %}
      {% when 'rainbow_faq' %}
        {% render 'rainbow-faq-block' %}
      {% when 'rainbow_contact_form' %}
        {% render 'rainbow-contact-form-block' %}
      {% when 'overlay_header' %}
        {% render 'overlay-header-block' %}
    {% endcase %}
  {% endfor %}
</section>

