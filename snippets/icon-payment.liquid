{% comment %}
  Renders a payment icon from assets
  Accepts:
  - name: {String} The name of the payment method (visa, mastercard, paypal, etc.)
{% endcomment %}

{% case name %}
  {% when 'visa' %}
    {{- 'visa-icon.svg' | asset_url | img_tag: alt: 'Visa', class: 'icon icon-payment-visa' -}}
  {% when 'mastercard' %}
    {{- 'mastercard-icon.svg' | asset_url | img_tag: alt: 'Mastercard', class: 'icon icon-payment-mastercard' -}}
  {% when 'amex' %}
    {{- 'amex-icon.svg' | asset_url | img_tag: alt: 'American Express', class: 'icon icon-payment-amex' -}}
  {% when 'paypal' %}
    {{- 'paypal-icon.svg' | asset_url | img_tag: alt: 'PayPal', class: 'icon icon-payment-paypal' -}}
  {% when 'apple_pay' %}
    {{- 'apple-pay-icon.svg' | asset_url | img_tag: alt: 'Apple Pay', class: 'icon icon-payment-apple-pay' -}}
  {% when 'klarna' %}
    {{- 'klarna-icon.svg' | asset_url | img_tag: alt: 'Klarna', class: 'icon icon-payment-klarna' -}}
  {% else %}
    <svg class="icon icon-payment-generic" viewBox="0 0 38 24"><rect width="38" height="24" rx="3" fill="currentColor" opacity="0.3"/><text x="19" y="15" text-anchor="middle" fill="currentColor" font-size="8">{{ name | upcase }}</text></svg>
{% endcase %}
